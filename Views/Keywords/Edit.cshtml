@model Blog.Platform2.Models.Keyword

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Keyword</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KeywordId)

        <div class="form-group">
            <label class="control-label col-md-2" for="KeywordText">Enter your keywords:</label>
            <div class="col-md-10">
                <textarea class="form-control" id="KeywordText" name="KeywordText" type="text" rows="2">@Model.KeywordText</textarea>
                @Html.ValidationMessageFor(model => model.KeywordText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
