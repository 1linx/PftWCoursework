@model IEnumerable<Blog.Platform2.Models.Keyword>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KeywordText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approved)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KeywordText)
        </td>
        <td>
            @if (item.Approved == true)
            {<span>Approved</span>}
            else
            {
                <form method="post" action="~/Keywords/Approve/@item.KeywordId">
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Approve" class="btn btn-primary" />&nbsp;
                </form>
            }
        </td>
        <td>
            <table>
                <tr>

                    <td>
                        <form method="get" action="~/Keywords/Edit/@item.KeywordId">
                            <input type="submit" value="Edit" class="btn btn-info" />&nbsp;
                        </form>
                    </td>
                    <td>
                        <form method="post" action="~/Keywords/Delete/@item.KeywordId">
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            </table>

        </td>
    </tr>
}

</table>
