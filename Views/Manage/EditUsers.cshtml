@model IEnumerable<Blog.Platform2.Models.ApplicationUser>

@{
    ViewBag.Title = "EditUsers";
}

<h2>Manage Users</h2>

<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            <form method="post" action="~/Manage/DeleteUsers/@item.Id">
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete User" class="btn btn-sm btn-danger" />
            </form>
        </td>
    </tr>
}

</table>
